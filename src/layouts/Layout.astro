---
export interface Props {
  title?: string;
  description?: string;
}

const { title = "Marina Costa - YA Thriller Author", description = "Discover the mysterious world of Marina Costa, 12-year-old multilingual YA thriller writer and BookTuber from Mallorca, Spain." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <nav class="navbar">
      <div class="nav-container">
        <a href="/" class="nav-logo">Marina Costa</a>
        <div class="nav-menu">
          <a href="/" class="nav-link">Home</a>
          <a href="/about" class="nav-link">About</a>
          <a href="/books" class="nav-link">Books</a>
          <a href="/watch" class="nav-link">Watch Marina</a>
          <a href="/extras" class="nav-link">Extras</a>
          <a href="/contact" class="nav-link">Contact</a>
        </div>
        <div class="nav-toggle">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer class="footer">
      <div class="footer-content">
        <div class="footer-section">
          <h4>Marina Costa</h4>
          <p>YA Thriller Author & BookTuber</p>
        </div>
        <div class="footer-section">
          <h4>Follow Marina</h4>
          <div class="social-links">
            <a href="#" aria-label="YouTube">YouTube</a>
            <a href="#" aria-label="Instagram">Instagram</a>
          </div>
        </div>
        <div class="footer-section">
          <h4>Quick Links</h4>
          <a href="/books">Books</a>
          <a href="/watch">BookTube</a>
          <a href="/contact">Contact</a>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; 2025 Marina Costa. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --color-bg: #1a1a1a;
    --color-bg-light: #2a2a2a;
    --color-bg-card: #232323;
    --color-text: #e5e5e5;
    --color-text-muted: #a0a0a0;
    --color-accent: #2d5a3d;
    --color-accent-blue: #4a6b8a;
    --color-accent-light: #3d7556;
    --color-border: #3a3a3a;
    --font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    --shadow-hover: 0 8px 30px rgba(0, 0, 0, 0.4);
    --transition: all 0.3s ease;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-family);
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
    overflow-x: hidden;
  }

  .navbar {
    position: fixed;
    top: 0;
    width: 100%;
    background: rgba(26, 26, 26, 0.95);
    backdrop-filter: blur(10px);
    z-index: 1000;
    padding: 0;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
    text-decoration: none;
    transition: var(--transition);
  }

  .nav-logo:hover {
    color: var(--color-accent-light);
  }

  .nav-menu {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    color: var(--color-text);
    text-decoration: none;
    font-weight: 500;
    transition: var(--transition);
    position: relative;
  }

  .nav-link:hover {
    color: var(--color-accent-light);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-accent);
    transition: var(--transition);
  }

  .nav-toggle {
    display: none;
    flex-direction: column;
    cursor: pointer;
  }

  .nav-toggle span {
    width: 25px;
    height: 3px;
    background: var(--color-text);
    margin: 3px 0;
    transition: var(--transition);
  }

  main {
    margin-top: 80px;
    min-height: calc(100vh - 80px);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hero {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background: linear-gradient(135deg, rgba(45, 90, 61, 0.1) 0%, rgba(74, 107, 138, 0.1) 100%);
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('https://images.pexels.com/photos/1666021/pexels-photo-1666021.jpeg?auto=compress&cs=tinysrgb&w=1920&h=1080&fit=crop') center/cover;
    opacity: 0.15;
    z-index: -1;
  }

  .hero-content {
    z-index: 1;
    max-width: 800px;
  }

  .hero h1 {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 700;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .hero-hook {
    font-size: 1.5rem;
    color: var(--color-accent-light);
    font-style: italic;
    margin-bottom: 2rem;
    font-weight: 300;
  }

  .btn {
    display: inline-block;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-blue) 100%);
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    transition: var(--transition);
    box-shadow: var(--shadow);
    border: none;
    cursor: pointer;
    font-family: var(--font-family);
  }

  .btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-hover);
  }

  .btn-secondary {
    background: transparent;
    border: 2px solid var(--color-accent);
    color: var(--color-accent-light);
  }

  .btn-secondary:hover {
    background: var(--color-accent);
    color: white;
  }

  .section {
    padding: 4rem 0;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--color-text);
  }

  .card {
    background: var(--color-bg-card);
    border-radius: 12px;
    padding: 2rem;
    box-shadow: var(--shadow);
    transition: var(--transition);
    border: 1px solid var(--color-border);
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-hover);
  }

  .grid {
    display: grid;
    gap: 2rem;
  }

  .grid-2 {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }

  .grid-3 {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }

  .footer {
    background: var(--color-bg-light);
    padding: 3rem 0 1rem;
    margin-top: 4rem;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .footer-section h4 {
    color: var(--color-accent-light);
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .footer-section p {
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
  }

  .footer-section a {
    color: var(--color-text-muted);
    text-decoration: none;
    display: block;
    margin-bottom: 0.5rem;
    transition: var(--transition);
  }

  .footer-section a:hover {
    color: var(--color-accent-light);
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    display: inline-block;
    margin-bottom: 0;
  }

  .footer-bottom {
    text-align: center;
    padding: 2rem;
    border-top: 1px solid var(--color-border);
    margin-top: 2rem;
  }

  .footer-bottom p {
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .nav-menu {
      display: none;
    }

    .nav-toggle {
      display: flex;
    }

    .container {
      padding: 0 1rem;
    }

    .hero {
      min-height: 60vh;
    }

    .section {
      padding: 2rem 0;
    }

    .footer-content {
      padding: 0 1rem;
    }
  }
</style>

<script>
  // Mobile navigation toggle
  document.addEventListener('DOMContentLoaded', () => {
    const navToggle = document.querySelector('.nav-toggle');
    const navMenu = document.querySelector('.nav-menu');

    if (navToggle && navMenu) {
      navToggle.addEventListener('click', () => {
        navMenu.classList.toggle('active');
      });
    }
  });
</script>